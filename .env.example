# Document Processing (LLMWhisperer v2 API)
# Get your API key from: https://unstract.com/llmwhisperer
LLMWHISPERER_API_KEY=your_llmwhisperer_api_key_here
LLMWHISPERER_BASE_URL=https://llmwhisperer-api.us-central.unstract.com/api/v2

# LLMWhisperer Processing Options
LLMWHISPERER_TIMEOUT=300
LLMWHISPERER_MAX_PAGES=50
LLMWHISPERER_PROCESSING_MODE=ocr

# AI/ML Configuration (OpenAI)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-4.1-mini-2025-04-14

# Optional: Database Configuration (for future features)
DATABASE_URL=postgresql://user:password@localhost/dbname

# Optional: Server Configuration
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5001